@page
@model StarWarsApp.Pages.VehiclesModel
@{
    ViewData["Title"] = "Vehicles";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Model</th>
            <th scope="col">Manufacturer</th>
            <th scope="col">Cost in Credits</th>
            <th scope="col">Length</th>
            <th scope="col">Max Atmosphering Speed</th>
            <th scope="col">Crew</th>
            <th scope="col">Passangers</th>
            <th scope="col">Cargo Capacity</th>
            <th scope="col">Consumables</th>
            <th scope="col">Vehicle Class</th>
        </tr>
    </thead>
    <tbody>
        @foreach (VehiclesPage vehiclesPage in @Model.Vehicles)
        {
            foreach (Vehicles vehicles in vehiclesPage.results)
            {
                <tr>
                    <td>@vehicles.name</td>
                    <td>@vehicles.model</td>
                    <td>@vehicles.manufacturer</td>
                    <td>@vehicles.cost_in_credits</td>
                    <td>@vehicles.length</td>
                    <td>@vehicles.max_atmosphering_speed</td>
                    <td>@vehicles.crew</td>
                    <td>@vehicles.passengers</td>
                    <td>@vehicles.cargo_capacity</td>
                    <td>@vehicles.consumables</td>
                    <td>@vehicles.vehicle_class</td>                
                </tr>           
            }            
        }
    </tbody>
</table>