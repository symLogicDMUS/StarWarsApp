@page
@model StarWarsApp.Pages.SpaceshipsModel
@{
    ViewData["Title"] = "Spaceships";

}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<table class="table table-dark table-striped" id="spaceships">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Model</th>
            <th scope="col">Manufacuterer</th>
            <th scope="col">Cost in Credits</th>
            <th scope="col">Length</th>
            <th scope="col">Max Atmosphering Speed</th>
            <th scope="col">Crew</th>
            <th scope="col">Passengers</th>
            <th scope="col">Cargo Capacity</th>
            <th scope="col">Consumables</th>
            <th scope="col">Hyperdrive Rating</th>
            <th scope="col">MGLT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SpaceshipsPage spaceshipsPage in @Model.Spaceships)
        {
            foreach (Spaceship spaceship in spaceshipsPage.results)
        {
                <tr>
                    <td>@spaceship.name</td>
                    <td>@spaceship.model</td>
                    <td>@spaceship.manufacturer</td>
                    <td>@spaceship.cost_in_credits</td>
                    <td>@spaceship.length</td>
                    <td>@spaceship.max_atmosphering_speed</td>
                    <td>@spaceship.crew</td>
                    <td>@spaceship.passengers</td>
                    <td>@spaceship.cargo_capacity</td>
                    <td>@spaceship.consumables</td>
                    <td>@spaceship.hyperdrive_rating</td>
                    <td>@spaceship.MGLT</td>
                </tr>           
            }            
        }
    </tbody>
</table>
